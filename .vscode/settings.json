{
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[snippets]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},

	"files.associations": {
		"*.css": "tailwindcss"
	},
	"[css]": {
		"editor.defaultFormatter": "bradlc.vscode-tailwindcss"
	},
	"tailwindCSS.experimental.configFile": "./src/app.css",
	// duplicate of better-tailwindcss/no-conflicting-classes
	"tailwindCSS.lint.cssConflict": "ignore",

	"eslint.codeAction.showDocumentation": {
		"enable": true
	},
	"eslint.codeAction.disableRuleComment": {
		"enable": false
	},
	"eslint.validate": ["javascript", "typescript", "svelte"],
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	},

	"editor.quickSuggestions": {
		"strings": "on"
	},

	"deno.enable": false,

	"emmet.extensionsPath": ["./.vscode/emmet"],
	"emmet.includeLanguages": {
		"svelte": "html"
	},

	"svelte.enable-ts-plugin": true,
	"svelte.plugin.svelte.defaultScriptLanguage": "ts",
	"svelte.plugin.css.completions.emmet": false,
	"svelte.plugin.html.completions.emmet": false
}
